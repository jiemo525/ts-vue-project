{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": [ 
        "dom",
        "dom.iterable",
        "scripthost",
        "es2015" 
      ]
    },
    "include": [
      // ts 管理的文件
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}